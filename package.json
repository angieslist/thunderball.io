{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "postbootstrap": "run-s link-react link-to-react",
    "build": "run-s clean transpile lint",
    "clean": "rimraf packages/*/lib/ packages/*/build/",
    "docs-build": "npm run docs-prepare && gitbook build",
    "docs-clean": "rimraf _book",
    "docs-prepare": "gitbook install",
    "docs-publish": "npm run docs-clean && npm run docs-build && cp CNAME _book && cp circle.yml _book && cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'update book' && git push git@github.com:angieslist/thunderball gh-pages --force",
    "docs-watch": "npm run docs-prepare && gitbook serve",
    "generator-run": "cd packages/thunderball-hello-world/ && yo thunderball",
    "generator-update": "rimraf packages/generator-thunderball/app/templates && gulp generator-update",
    "link-react": "cd node_modules/react && npm link && cd ../react-dom && npm link",
    "link-to-react": "cd packages/thunderball-hello-world && npm link react react-dom",
    "lint": "esw . --ext .js,.jsx --cache --changed",
    "start": "run-p \"transpile -- --watch\" \"lint -- --watch --fix\"",
    "test": "jest --watch",
    "test-ci": "jest --ci --coverage --testResultsProcessor=jest-junit-reporter",
    "transpile": "lerna exec --parallel --ignore generator-thunderball -- babel src -d lib --ignore *.spec.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-imports": "^1.4.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^2.0.0",
    "eslint": "^4.7.2",
    "eslint-watch": "^3.1.2",
    "gitbook-cli": "^2.3.2",
    "gulp": "^3.9.1",
    "jest": "^21.1.0",
    "jest-junit-reporter": "^1.1.0",
    "jsx-control-statements": "^3.2.6",
    "lerna": "^2.2.0",
    "npm-run-all": "^4.1.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/generator-thunderball",
      "<rootDir>/packages/thunderball/src",
      "<rootDir>/packages/thunderball-client/src",
      "<rootDir>/packages/thunderball-hello-world/src"
    ]
  }
}
